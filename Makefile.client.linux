include Makefile.client.common

LIBS = -lSDLmain -lSDL -lSDL_ttf -lSDL_image -lSDL_net -lGL -lGLEW -lGLU -lalut -lopenal
BIN = kp2_client

OBJ = $(SRC:.cpp=.o)
DEPS = $(SRC:.cpp=.d)

all: $(BIN)

$(BIN): $(OBJ)
	$(CXX) $(OBJ) $(LIBS) $(CXXFLAGS) -o $(BIN)

clean:
	-rm $(BIN)
	-rm $(OBJ)
	-rm $(DEPS)

%.o: %.cpp
	$(call MAKEDEPEND,$<,$@,$(subst .o,.d,$@))
	$(CXX) $(CXXFLAGS) -c $< -o $@

ifneq "$(MAKECMDGOALS)" "clean"

  -include $(DEPS)

endif


