include Makefile.server.common

WINDOWS_LIBS = -lmingw32 -mwindows
SDL_LIBS = -lSDLmain -lSDL -lSDL_net
LIBS = $(WINDOWS_LIBS) $(SDL_LIBS) 
BIN = kp2_server.exe

OBJ = $(SRC:.cpp=.o)
DEPS = $(SRC:.cpp=.d)

all: $(BIN)

$(BIN): $(OBJ)
	$(CXX) $(OBJ) $(LIBS) $(CXXFLAGS) -o $(BIN)

clean:
	-rm $(BIN)
	-rm $(OBJ)

%.o: %.cpp
	$(call MAKEDEPEND,$<,$@,$(subst .o,.d,$@))
	$(CXX) $(CXXFLAGS) -c $< -o $@

ifneq "$(MAKECMDGOALS)" "clean"

  -include $(DEPS)

endif


